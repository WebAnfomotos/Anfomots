<body>
    <header>
        <%- include('nav'); %>
    </header>
<div class="container flex-wrapper">
  <div class="content"> 
  <div class="cart">
    <a class="nav-link active" aria-current="page" href="/cart">
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
      </svg>
      <% let cantida = 0 %>
      <% Cart.forEach( (Cart) => { %>
        <% cantida += 1 %>
        <% }) %>
      <div class="notification" id="cart-count"><%= cantida %></div>
    </a>
  </div>
  <div class="espacio">
    <%- include('navcatalogo'); %>
  </div>
  <div class="row my-4">
    <div class="col">
      <input type="text" id="searchInput" class="form-control" placeholder="Buscar productos...">
    </div>
  </div>
  <div class="container">
    <div class="row" id="productContainer">
      <% limpieza.forEach( (limpieza) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-6 product-card">
          <div class="card mb-3" style="width: 100%;">
            <img src="img/Productos/<%= limpieza.Imagen %>" class="card-img-top" alt="Imagen del producto">
            <div class="card-body">
              <h5 class="card-title"><%= limpieza.Producto %></h5>
              <p class="Precio">$<%= limpieza.Precio.toLocaleString('es-CO') %> COP</p>
              <form action="/Agregarcart/<%= limpieza.id %>" method="POST">
                <div class="cantidad-container">
                  <label for="cantidad-<%= limpieza.id %>" class="cantidad-label">Cantidad</label>
                  <input type="number" name="cantidad" id="cantidad-<%= limpieza.id %>" class="form-control cantidad-input" placeholder="Cantidad" min="1" value="1">
                </div>
                <button type="submit" class="btn-agregar btn btn-primary">Agregar al carrito</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <div id="noProductMessage" class="text-center mt-4" style="display: none;">
      <h1>Producto no encontrado.</h1>
    </div>
  </div>
</div>
</div>
